--- # Outline to playbook transation
- hosts: openstack
  remote_user: vagrant
  become: yes
  become_method: sudo
  gather_facts: no

  tasks:  
  - name: date/time stamp for when the playbook starts
    raw: /usr/bin/date > /home/vagrant/playbook_start.log

  - name: install apache webserver
    yum: pkg=httpd state=latest

  - name: start the web service
    service: name=httpd state=restarted

  - name: verify that the webservice is running
    command: systemctl status httpd
    register: result
  - debug: var=result

  - name: install telnet software
    yum: pkg=telnet state=latest
 
  - name: install lynx
    yum: pkg=lynx state=latest

  - name: log all packages installed on system
    raw: yum list installed > /home/vagrant/installed.log

  - name: date/time stamp for when the playbook ends
    raw: /usr/bin/date > /home/vagrant/playbook_end.log

